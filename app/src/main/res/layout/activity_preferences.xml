<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.suihan74.notificationreporter.models.WaterDropNotchSetting"/>
        <variable
            name="vm"
            type="com.suihan74.notificationreporter.scenes.preferences.PreferencesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:paddingHorizontal="30dp"
            android:paddingTop="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/previewButton"
                    android:text="@string/prefs_preview_button_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/notifyButton"
                    android:text="@string/prefs_notify_button_text"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/prefs_light_level_desc"
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.slider.Slider
                    android:valueFrom="0.0"
                    android:valueTo="1.0"
                    android:stepSize="0.02"
                    android:value="@={vm.lightLevel}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/prefs_line_width_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.slider.Slider
                    android:valueFrom="0.0"
                    android:valueTo="20.0"
                    android:stepSize="0.1"
                    android:value="@={vm.lineThickness}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/prefs_blur_size_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.slider.Slider
                    android:valueFrom="0.0"
                    android:valueTo="50.0"
                    android:stepSize="0.1"
                    android:value="@={vm.blurSize}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/prefs_default_notification_color_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/colorEditText"
                    colorCode="@={vm.notificationColor}"
                    android:hint="color | e.g.) #ff0000 (red)"
                    android:inputType="text"
                    android:selectAllOnFocus="true"
                    android:maxLength="6"
                    android:importantForAutofill="no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@{@string/prefs_corner_radius_desc(`左上`)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.slider.Slider
                    android:valueFrom="0.0"
                    android:valueTo="200.0"
                    android:stepSize="1.0"
                    android:value="@={vm.leftTopCornerRadius}"
                    editing="@={vm.editingLeftTopCornerRadius}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@{@string/prefs_corner_radius_desc(`右上`)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.slider.Slider
                    android:valueFrom="0.0"
                    android:valueTo="200.0"
                    android:stepSize="1.0"
                    android:value="@={vm.rightTopCornerRadius}"
                    editing="@={vm.editingRightTopCornerRadius}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@{@string/prefs_corner_radius_desc(`左下`)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.slider.Slider
                    android:valueFrom="0.0"
                    android:valueTo="200.0"
                    android:stepSize="1.0"
                    android:value="@={vm.leftBottomCornerRadius}"
                    editing="@={vm.editingLeftBottomCornerRadius}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@{@string/prefs_corner_radius_desc(`右下`)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.slider.Slider
                    android:valueFrom="0.0"
                    android:valueTo="200.0"
                    android:stepSize="1.0"
                    android:value="@={vm.rightBottomCornerRadius}"
                    editing="@={vm.editingRightBottomCornerRadius}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/prefs_notch_type_selection_desc"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/notchTypeSelectionButton"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:id="@+id/notchSettingFragmentArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

        <!-- はみ出し確認用の背景 -->
        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="@{vm.editingLeftTopCornerRadius}"
            android:background="#ff00ff"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="@{vm.editingRightTopCornerRadius}"
            android:background="#ff00ff"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="@{vm.editingLeftBottomCornerRadius}"
            android:background="#ff00ff"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="@{vm.editingRightBottomCornerRadius}"
            android:background="#ff00ff"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:visibility="@{vm.editingTopNotch}"
            android:background="#ff00ff"
            android:layout_width="0dp"
            android:layout_height="64dp"/>
        <!-- はみ出し確認用の背景ここまで -->

        <ImageView
            android:id="@+id/notificationBar"
            notificationSetting="@{vm.notificationSetting}"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
