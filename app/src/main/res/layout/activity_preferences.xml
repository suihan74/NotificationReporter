<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.suihan74.notificationreporter.models.WaterDropNotchSetting"/>
        <variable
            name="vm"
            type="com.suihan74.notificationreporter.scenes.preferences.PreferencesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/motionLayout"
            android:background="@android:color/transparent"
            app:layoutDescription="@xml/motion_menu_open"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp">

            <ScrollView
                android:id="@+id/contentArea"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingHorizontal="16dp"
                android:paddingTop="80dp"
                android:layout_marginLeft="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/previewButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/prefs_preview_button_text" />

                    <Button
                        android:id="@+id/notifyButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:text="@string/prefs_notify_button_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="@string/prefs_silent_timezone_desc" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp">

                        <Button
                            android:id="@+id/silentTimezoneStartButton"
                            localTimeInt="@{vm.silentTimezoneStart}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/silentTimezoneEndDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prefs_silent_timezone_separator"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/silentTimezoneEndButton"
                            app:layout_constraintStart_toEndOf="@id/silentTimezoneStartButton"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/silentTimezoneEndButton"
                            localTimeInt="@{vm.silentTimezoneEnd}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="@string/prefs_light_level_desc" />

                    <com.google.android.material.slider.Slider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="0.02"
                        android:value="@={vm.lightLevel}"
                        android:valueFrom="0.0"
                        android:valueTo="1.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prefs_line_width_desc" />

                    <com.google.android.material.slider.Slider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="0.1"
                        android:value="@={vm.lineThickness}"
                        android:valueFrom="0.0"
                        android:valueTo="20.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prefs_blur_size_desc" />

                    <com.google.android.material.slider.Slider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="0.1"
                        android:value="@={vm.blurSize}"
                        android:valueFrom="0.0"
                        android:valueTo="50.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prefs_default_notification_color_desc" />

                    <EditText
                        android:id="@+id/colorEditText"
                        colorCode="@={vm.notificationColor}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="color | e.g.) #ff0000 (red)"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLength="6"
                        android:selectAllOnFocus="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/prefs_corner_radius_desc(`左上`)}" />

                    <com.google.android.material.slider.Slider
                        editing="@={vm.editingLeftTopCornerRadius}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:value="@={vm.leftTopCornerRadius}"
                        android:valueFrom="0.0"
                        android:valueTo="200.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/prefs_corner_radius_desc(`右上`)}" />

                    <com.google.android.material.slider.Slider
                        editing="@={vm.editingRightTopCornerRadius}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:value="@={vm.rightTopCornerRadius}"
                        android:valueFrom="0.0"
                        android:valueTo="200.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/prefs_corner_radius_desc(`左下`)}" />

                    <com.google.android.material.slider.Slider
                        editing="@={vm.editingLeftBottomCornerRadius}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:value="@={vm.leftBottomCornerRadius}"
                        android:valueFrom="0.0"
                        android:valueTo="200.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/prefs_corner_radius_desc(`右下`)}" />

                    <com.google.android.material.slider.Slider
                        editing="@={vm.editingRightBottomCornerRadius}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1.0"
                        android:value="@={vm.rightBottomCornerRadius}"
                        android:valueFrom="0.0"
                        android:valueTo="200.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/prefs_notch_type_selection_desc" />

                    <Button
                        android:id="@+id/notchTypeSelectionButton"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:id="@+id/notchSettingFragmentArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </ScrollView>

            <!-- メニュー表示中の背景 -->
            <View
                android:id="@+id/clickGuard"
                android:background="#99000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <!-- メニュー部分 -->
            <FrameLayout
                android:id="@+id/menuArea"
                android:background="@color/preferencesMenuBackground"
                android:elevation="16dp"
                android:paddingVertical="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="48dp"
                android:layout_height="0dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menuRecyclerView"
                    style="@style/RecyclerView.Linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>

            </FrameLayout>
        </androidx.constraintlayout.motion.widget.MotionLayout>

        <!-- はみ出し確認用の背景 -->
        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="@{vm.editingLeftTopCornerRadius}"
            android:background="#ff00ff"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="@{vm.editingRightTopCornerRadius}"
            android:background="#ff00ff"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="@{vm.editingLeftBottomCornerRadius}"
            android:background="#ff00ff"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="@{vm.editingRightBottomCornerRadius}"
            android:background="#ff00ff"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.5"
            android:visibility="@{vm.editingTopNotch}"
            android:background="#ff00ff"
            android:layout_width="0dp"
            android:layout_height="64dp"/>
        <!-- はみ出し確認用の背景ここまで -->

        <ImageView
            android:id="@+id/notificationBar"
            notificationSetting="@{vm.notificationSetting}"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
