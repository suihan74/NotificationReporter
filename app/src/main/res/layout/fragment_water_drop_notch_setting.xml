<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.suihan74.notificationreporter.scenes.preferences.notch.WaterDropNotchSettingViewModel"/>

        <variable
            name="prefVm"
            type="com.suihan74.notificationreporter.scenes.preferences.PreferencesViewModel"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/prefs_rectangle_notch_width_adjustment_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/widthAdjustmentSlider"
            android:valueFrom="-1.0"
            android:valueTo="1.0"
            android:stepSize="0.01"
            android:value="@={vm.widthAdjustment}"
            editing="@={prefVm.editingTopNotch}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/prefs_rectangle_notch_height_adjustment_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/heightAdjustmentSlider"
            android:valueFrom="0.0"
            android:valueTo="90.0"
            android:stepSize="1.0"
            android:value="@={vm.heightAdjustment}"
            editing="@={prefVm.editingTopNotch}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@{@string/prefs_water_drop_notch_radius_desc(`上部`)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/topRadiusSlider"
            android:valueFrom="0.0"
            android:valueTo="200.0"
            android:stepSize="1.0"
            android:value="@={vm.topRadius}"
            editing="@={prefVm.editingTopNotch}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
