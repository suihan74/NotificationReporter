<resources>
    <!-- Base application theme. -->
    <style name="Theme.NotificationReporter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- ====== -->

    <style name="LockScreenActivity" parent="Theme.NotificationReporter">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ClockTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/clockTextColor</item>
    </style>

    <style name="DateTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dateTextColor</item>
    </style>

    <!-- ====== -->

    <style name="PreferencesActivity" parent="Theme.NotificationReporter">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:background">@color/preferencesBackgroundColor</item>
        <item name="android:textColor">@color/preferencesTextColor</item>
        <item name="android:textColorPrimary">@color/preferencesTextColor</item>
        <item name="colorOnSurface">@color/preferencesTextColor</item>

        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="switchTextAppearance">@style/SwitchTextAppearance</item>
    </style>

    <style name="SearchAppsTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/preferencesTextColor</item>
        <item name="hintTextColor">@color/preferencesTextColor</item>
    </style>

    <style name="SearchAppsTextInputEditText">
        <item name="android:textColor">@color/preferencesTextColor</item>
    </style>

    <style name="SwitchTextAppearance">
        <item name="android:textColor">@color/preferencesTextColor</item>
    </style>

    <!-- ====== -->

    <!-- AlertDialog -->
    <style name="AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorSecondary">@color/blue_700</item>
        <item name="android:textColorPrimary">@color/gray_300</item>
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:textColorSecondary">@color/gray_300</item>
        <item name="textColorAlertDialogListItem">@color/gray_300</item>
    </style>

    <!-- ====== -->

    <!-- TimePickerDialog -->
    <style name="TimePickerDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="showTitle">false</item>
        <item name="android:timePickerMode">clock</item>

        <!-- TimePicker本体部分(時計盤)のスタイル -->
        <item name="android:timePickerStyle">@style/TimePickerWidgetStyle</item>

        <!-- ダイアログ下部ボタン(Positive,Negative,Neutral...分けるなら別々に作る) -->
        <item name="android:buttonBarButtonStyle">@style/TimePickerDialogButtonStyle</item>
        <!-- ダイアログ下部ボタンのタップ時背景色 -->
        <item name="colorPrimary">@color/blue_700</item>

        <!-- 入力モード切替ボタンのアイコン色 -->
        <item name="imageButtonStyle">@style/TimePickerDialogImageButtonStyle</item>

        <!-- TextView部分の背景色を透過する -->
        <item name="android:textViewStyle">@style/TimePickerDialogTextViewStyle</item>

        <!-- 直接入力モード時のテキスト色 -->
        <item name="android:editTextColor">@color/white</item>
        <!-- 直接入力モード時のフォーカス中のEditTextの色 -->
        <item name="colorAccent">@color/blue_700</item>
        <!-- 直接入力モード時のAM/PM選択用スピナの"▼"ボタンの色を設定する -->
        <item name="android:spinnerStyle">@style/TimePickerDialogSpinnerStyle</item>
    </style>

    <!-- TimePicker本体部分(時計盤)のスタイル -->
    <style name="TimePickerWidgetStyle" parent="@android:style/Widget.Material.TimePicker">
        <!-- 時計盤の背景色 -->
        <item name="android:numbersBackgroundColor">@color/gray_300</item>
        <!-- 時計盤のセレクタの色 -->
        <item name="android:numbersSelectorColor">@color/blue_700</item>
        <!-- 時計盤の(外側の)数字の色 -->
        <item name="android:numbersTextColor">@color/time_picker_numbers_text</item>
        <!-- 時計盤の内側の数字の色(24時間表示モード) -->
        <item name="android:numbersInnerTextColor">@color/time_picker_numbers_text</item>

        <!-- ヘッダ部分の文字設定 -->
        <item name="android:headerTimeTextAppearance">@style/TimePickerHeaderTextAppearance</item>
        <!-- ヘッダ部分の背景色 -->
        <item name="android:headerBackground">@android:color/transparent</item>
        <!-- AM/PMの文字色(12時間表示モード) -->
        <item name="android:amPmTextColor">@color/white</item>
    </style>

    <!-- TextView部分の背景色を透過する -->
    <style name="TimePickerDialogTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- ヘッダ部分の文字設定 -->
    <style name="TimePickerHeaderTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ダイアログ下部ボタン(Positive,Negative,Neutral...分けるなら別々に作る) -->
    <style name="TimePickerDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_700</item>
    </style>

    <!-- 入力モード切替ボタンのアイコン色 -->
    <style name="TimePickerDialogImageButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="tint">@color/blue_700</item>
    </style>

    <!-- 直接入力モード時のAM/PM選択用スピナの"▼"ボタンの色を設定する -->
    <style name="TimePickerDialogSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- ====== -->

    <!-- RecyclerView -->
    <style name="RecyclerView">
        <!--
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        -->
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RecyclerView.Linear">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>
</resources>
